<div class="banner-home" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,36,0.6) 50%), url(<%= image_path 'fille.jpg'%>);">

         <%= render 'shared/navbar' %>



      <div class="banner-content">
        <% if current_user.gender == "Homme"%>

          <% if current_user.status == "Courtiser" %>
            <h3><strong>Vous êtes courtisan</strong></h3>
          <% else %>
            <h3><strong>Vous êtes courtisé</strong></h3>
          <% end %>

        <% else %>

          <% if current_user.status == "Courtiser" %>
            <h3><strong>Vous êtes courtisane</strong></h3>
          <% else %>
            <h3><strong>Vous êtes courtisée</strong></h3>
          <% end %>

        <% end %>
            <div class="rules" style = "
text-decoration-color:red;color:red;text-align: left;">
            <p class ="banner-message quotes">Round 1: Présente toi</p>
            <p class ="banner-message quotes">Round 2: Satisfait la curiosité de ta douce</p>
            <p class ="banner-message quotes">Round 3: Démarque toi</p>
            </div>


        <% if user_signed_in? %>
          <%= link_to "lancer un duel", new_challenge_path, class: "btn-red-custom btn-lg active" %>
        <% else %>
          <% if devise_mapping.omniauthable? %>
            <% resource_class.omniauth_providers.each do |provider| %>
              <p><%= link_to "Connectez-vous avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), {class: "fb-btn"} %></p>
            <% end %>
          <% end %>
        <% end %>




      </div>
 </div>

