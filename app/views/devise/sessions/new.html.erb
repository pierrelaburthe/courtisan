
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,36,0.6) 50%), url(<%= image_path 'femmes.jpeg'%>);">

<div class="container">

  <div class="row">

      <div class="col-xs-12 col-md-offset-4 col-md-4">
      <h2></h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, placeholder: "courtisan@gmail.com", label: "Email" %>
            <%= f.input :password, required: false, label: "Mot de passe" %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>


        <div class="form-actions text-center">
          <%= f.button :submit, "Connexion", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

        </div>
    </div>
</div>


