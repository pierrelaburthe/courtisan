<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-offset-4 col-md-4 text-center">
      <h2 class="text-center">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, label: "Email" %>
          <%= f.input :password, required: false, label: "Mot de passe" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Log in", class: "btn btn-primary" %>
        </div>
    <% end %>

<%= render "devise/shared/links" %>

    </div>
  </div>
</div>

