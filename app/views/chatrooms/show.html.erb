

    <div class="messages">
      <% @chatroom.discussions.each do |discussion| %>
        <%= render "discussions/discussion", discussion: discussion %>
      <% end %>
    </div>

    <div id="create-discussion">
      <%= simple_form_for [@chatroom, Discussion.new], remote: true do |f| %>
        <%= f.error_notification %>
        <%#= hidden_field_tag :authenticity_token, form_authenticity_token %>
